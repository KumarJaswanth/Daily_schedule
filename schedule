    <script>
        // Initialize variables
        let currentStreak = 0;
        let bestStreak = localStorage.getItem('bestStreak') ? parseInt(localStorage.getItem('bestStreak')) : 0;
        const streakSpan = document.getElementById('streak');
        const bestStreakSpan = document.getElementById('bestStreak');

        // Update streaks
        function updateStreak() {
            streakSpan.textContent = currentStreak;
            bestStreakSpan.textContent = bestStreak;
            if (currentStreak > bestStreak) {
                bestStreak = currentStreak;
                localStorage.setItem('bestStreak', bestStreak);
            }
        }

        function incrementStreak() {
            currentStreak++;
            updateStreak();
        }

        function toggleCheckbox(scheduleBlock) {
            const checkbox = scheduleBlock.querySelector('input[type="checkbox"]');
            checkbox.checked = !checkbox.checked;
            updateStreak();
        }

        function resetTasks() {
            currentStreak = 0;
            document.querySelectorAll('.schedule-block input').forEach((checkbox) => checkbox.checked = false);
            updateStreak();
        }

        // Initialize the best streak on page load
        window.onload = () => {
            updateStreak();
        };
    </script>
